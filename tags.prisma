datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  tags        Tag[]
}

model Tag {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  users       User[]
}